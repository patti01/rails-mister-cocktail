<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://images.unsplash.com/photo-1468072114808-903e572b8ead?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=966&q=80);">
    <div class="banner-content">
        <h1 class="text-center title">Cocktailator</h1>
        <div class="wrapper-btn-large text-center">
        <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %><br>
        </div>
    </div>
</div>

<div class="container">
<div class="cards">
<% @cocktails.each do |cocktail| %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1542849187-5ec6ea5e6a27?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1047&q=80)">
<h2> <%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
</div>
<% end %>
</div>



