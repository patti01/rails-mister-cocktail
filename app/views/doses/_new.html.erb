<div class="body-show">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="card-cocktail">
          <div class="container mt-10">
          <br>
          <h2><%= @cocktail.name %></h2>
          <h3>Add a new ingredient</h3>
          <%= simple_form_for [cocktail, dose] do |f| %>
           <%= f.input :description, placeholder: '2cl' %>
           <%= f.association :ingredient, collection: Ingredient.all, input_html: { class: "select2" }
           %>
           <%= f.submit "add a cocktail recipe", class: "btn btn-primary" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
 </div>
